@model ConvocaApp.Models.CuentaModel

@{
    //ViewData["Title"] = "Details";
    Layout = "_StartApp";
}

<section class="header_login">
    <h1>Detalles de Usuario</h1>
</section>
<div class="user_details">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Edad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.age)
        </dd>
        <dt class="col-sm-2">
            Email:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">
            Sexo:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sex)
        </dd>
        <dt class="col-sm-2">
            Dirección:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.address)
        </dd>
        <dt class="col-sm-2">
            Teléfono:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cellphone)
        </dd>
        <dt class="col-sm-2">
            Ciudad:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.city)
        </dd>
    </dl>
</div>
