    @Html.ActionLink("Editar", "Edit", "Users", new { Model.Id /* id=item.PrimaryKey */ }) |
    <a class="details_menu" href="@Html.ActionLink("Editar", "Edit","Users", new { Model.Id /* id=item.PrimaryKey */ })"></a>


