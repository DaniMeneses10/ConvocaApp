    ViewBag.Title = "Login";
    Layout = "_StartApp";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />



<body>

    <section class="header_login">
        <h1>Inicia tu sesión</h1>
    </section>
    <section class="form-register">
        <form asp-action="Login">
            @*<label Class="controls" asp-for="email">Email</label>*@
            <input asp-for="email" class="controls" type="email" placeholder="Email" />
