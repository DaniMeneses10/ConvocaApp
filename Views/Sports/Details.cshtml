@model ConvocaApp.Models.SportsModel

@{    
    Layout = "_StartApp";
}

<section class="header_login">
    <h1>Detalles del Deporte</h1>
</section>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Deporte
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class="col-sm-2">
            Número de Jugadores
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.playerNumber)
        </dd>
        <dt class="col-sm-2">
            Accesorios
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.accesories)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edita tu Deporte</a> |
    <a asp-action="Index">Regresa a la lista</a>
</div>
