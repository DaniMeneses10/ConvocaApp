@model IEnumerable<ConvocaApp.Models.SportsModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_StartApp";
}


<section class="header_login">
    <h1>Lista de Deportes</h1>
</section>


    <table class="sports_table">
        <thead>
            <tr>
                <th>
                    Deporte
                </th>
                <th>
                    Número de Jugadores
                </th>
                <th>
                    Accesorios
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.playerNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.accesories)
                    </td>
                </tr>
            }
        </tbody>
    </table>
<section class="sport-list">
    <div class="details_menu_main_sports">
        <a class="botons" href="https://localhost:44304/Convoca/Index"> Home </a>
    </div>
</section>
