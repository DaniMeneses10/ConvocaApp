        <div class="form-group">
            <label asp-for="accesories" class="control-label">Accesorios</label>
            <ul class="accesoriesList">
                @foreach (var accesorio in ViewBag.Accesorios)
                {
                    <li>
                        <input asp-for="accesories" type="checkbox" value="@accesorio.accesories" /> @accesorio.accesories                    
                    </li>
                }
            </ul>
            <span asp-validation-for="accesories" class="text-danger"></span>
        </div>



            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

