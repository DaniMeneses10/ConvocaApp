@model ConvocaApp.Models.SportsModel

<h1>Selecciona tu Deporte y accesorios necesarios</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="name" class="control-label">Deporte</label>
                <select asp-for="name" class="form-control">
                    @foreach (var actividad in ViewBag.ActividadesFisicas)
                    {
                        <option value="" disabled selected hidden>--Elige una opción--</option>
                        <option value="@actividad.name">@actividad.name</option>
                        //La tabla me toma el valor
                    }
                </select>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="playerNumber" class="control-label">Número de Jugadores</label>
                <input asp-for="playerNumber" class="form-control" />
                <span asp-validation-for="playerNumber" class="text-danger"></span>
            </div>

